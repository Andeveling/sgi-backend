model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  columnId    String
  column      Column     @relation(fields: [columnId], references: [id], onDelete: Cascade)
  position    Int        @default(0)
  status      TaskStatus @default(TODO)

  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  likes TaskLike[]

  comments TaskComment[]
  userId   String? // Tarea asignada a un usuario (opcional)
  user     User?         @relation(fields: [userId], references: [id])

  @@index([columnId, position], map: "task_column_position_idx")
  @@map("tasks")
}

model TaskLike {
  id     String @id @default(cuid())
  taskId String
  userId String

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([taskId, userId]) // Un usuario solo puede dar un "like" por tarea
}

enum TaskStatus {
  TODO
  DOING
  DONE
  CANCELLED
}

model TaskComment {
  id        String   @id @default(cuid())
  taskId    String
  content   String
  userId    String
  author    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Column {
  id        String   @id @default(cuid())
  title     String
  position  Int      @default(0)
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId, position], map: "column_board_position_idx")
  @@map("columns")
}

model Board {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  columns     Column[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("boards")
}
